<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/message_sent2"> <!-- for some reason using 'message_sent.xml' appears as blank on Gingerbread. Wat. -->

            <TextView
                android:id="@+id/sent_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_message"
                android:textSize="14sp"
                android:textColor="@color/dark_grey"
                android:fontFamily="sans-serif-light"
                android:gravity="right" />

            <TextView
                android:id="@+id/sent_timedate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/default_sent_time"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-condensed"
                android:layout_gravity="right" >

            </TextView>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>